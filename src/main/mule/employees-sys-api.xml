        </db:insert>
        <ee:transform doc:name="Transform Message" doc:id="00d0318c-d0ff-4a9f-bcd9-2adc85ec6c1e">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---

{"status": "posted employee data to snowflake"}]]></ee:set-payload>
