		<db:insert doc:name="Insert" doc:id="5fb008a8-75c1-4fd1-b09c-f40adb136aaa" config-ref="Database_Config">
            <db:sql><![CDATA[INSERT INTO "DEMO_DB"."PUBLIC"."EMPLOYEES" ("EMPLOYEEID" , "EMPLOYEENAME" , "DESIGNATION") VALUES (:empid, :empname, :empdesignation)]]></db:sql>
            <db:input-parameters><![CDATA[#[{
	empid: payload.employeeID,
