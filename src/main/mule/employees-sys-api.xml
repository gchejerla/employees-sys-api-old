            <db:input-parameters><![CDATA[#[{
	empid: vars.employeeID
}]]]></db:input-parameters>
        </db:select>
        <ee:transform doc:name="Transform Message" doc:id="99923162-1196-4b33-8fd2-f3798e4e6279">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
            </ee:message>
        </ee:transform>
        <choice doc:name="Choice" doc:id="1b5a654d-73ed-4d19-b442-a5a0a7823819">
            <when expression="#[(sizeOf(payload)) != 0]">
                <ee:transform doc:name="Transform Message" doc:id="60d68c8c-17a3-4b32-9deb-a746b47758b8">
                    <ee:message>
                        <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
                    </ee:message>
                </ee:transform>
            </when>
            <otherwise>
                <ee:transform doc:name="Transform Message" doc:id="0eb09d08-57a0-4c21-9e53-555492701350">
                    <ee:message>
                        <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	"Message": vars.employeeID ++ " employee details are not available"
}]]></ee:set-payload>
                    </ee:message>
                </ee:transform>
            </otherwise>
        </choice>
    </flow>
    <flow name="post:\postemployeedetails:application\json:employees-sys-api-config">
